<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="156dp"></com.youth.banner.Banner>

    <TextView
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="图片一句话简介...想说什么说什么...图片一句话简介...想说什么说什么...图片一句话简介...想说什么说什么..."
        android:textColor="#000000"
        android:textSize="14sp" />
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:id="@+id/ll_name"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="summer小姐姐"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:text="+ 关注"
                    android:gravity="center"
                    android:background="@drawable/bg_circle_detail_focus"
                    android:layout_marginLeft="10dp"
                    android:layout_width="42dp"
                    android:layout_height="20dp" />
            </LinearLayout>
           

            <TextView
                android:layout_marginTop="5dp"
                android:text="无志之人常立志，有志之人立长志"
                android:textSize="10sp"
                android:textColor="#aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/not_collected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="收藏"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="24dp"
            android:id="@+id/ll_pay"
            android:layout_toLeftOf="@id/ll_collect"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/reward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="打赏"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@id/ll_pay"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/is_liked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="2345"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:layout_marginTop="10dp"
        android:id="@+id/tab_layout"
        android:background="#ffffff"
        app:tl_textUnselectColor="@android:color/darker_gray"
        app:tl_textSelectColor="@android:color/black"
        app:tl_indicator_color="#ffea00"
        app:tl_tab_space_equal="true"
        app:tl_indicator_width="40dp"
        app:tl_textsize="14sp"
        android:layout_width="match_parent"
        android:layout_height="40dp"></com.flyco.tablayout.SlidingTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>