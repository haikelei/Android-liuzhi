<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="12dp"
    android:layout_height="70dp">
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="70dp">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@mipmap/test2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/btn_start"
            android:layout_width="21dp"
            android:layout_height="21dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="12sp"
            android:textColor="#414141"
            android:text="工艺品[低调品味]陶瓷家具摆件陶瓷工艺品[低调品味]陶瓷家具摆件陶瓷"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@mipmap/read_times"
                android:textSize="10sp"
                android:text="3456"
                android:drawablePadding="3dp"
                android:textColor="#aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="12dp"
                android:drawableLeft="@mipmap/icon_video"
                android:textSize="10sp"
                android:text="2.9万"
                android:drawablePadding="3dp"
                android:textColor="#aaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.library.AutoFlowLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </LinearLayout>
    
    


</LinearLayout>