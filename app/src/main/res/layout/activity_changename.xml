<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tv_changename_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@mipmap/common_black_back" />


        <TextView
            android:id="@+id/tv_changename_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改个性签名"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_changename_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="完成"
            android:textColor="#000"
            android:textSize="14sp" />

        <View
            style="@style/commonDiciderStyle"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:drawableEnd="@mipmap/clear_text"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="啦啦啦"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="支持中文英文,不支持特殊符号或表情"
        android:textColor="#aaa"
        android:textSize="13sp" />
</LinearLayout>